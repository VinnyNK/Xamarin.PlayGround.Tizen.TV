             x:Class="Xamarin.PlayGround.App.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Welcome to Xamarin.Forms! 123321"
